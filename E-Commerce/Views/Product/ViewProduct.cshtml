@model E_Commerce.Models.ProductDetailsViewModel
@{
    ViewBag.Title = "ViewImage";
}

<h2>Product</h2>

@using (Html.BeginForm("Indexview", "Product", FormMethod.Post, new
{
    enctype = "multipart/form-data"
}))
{<div> <img id = "user_img"
    height = "100"
    width = "90"
    style = "border:solid" /> </div>
    <div>
        <input type="file" title="search image" id="file" name="file" onchange="show(this)" /> </div>
        <div>
            UserId
        </div> <div> <input type = "text"
        id = "txt_id"
        name = "id" /> </div>
        <div>
            UserName
        </div> <div> <input type = "text"
        id = "txt_name"
        name = "Name" /> </div>
        <div>
            <input type="submit" title="save" /> </div>
}
            <button class="btn btn-md btn-success" id="btnAddToCard">Add to Card</button><br />
            <button class="btn btn-md btn-danger" id="btnback">Back to Listing</button>
            @Html.HiddenFor(m => m.ProductId, new { id = "hdnProductId" });

            <script src="~/Scripts/jquery-3.4.1.min.js"></script>
            <script>
    $(document).ready(function () {
        $("#btnAddToCard").on("click", function () {
            var ProductID = $("#hdnProductId").val();
            location.href = "@Url.Action("Order","Product")?ID=" + ProductID;
            return true;
        });

        $("#btnback").on("click", function () {
            location.href = "@Url.Action("Index","Product")";
            return true;
        });
    });

                function show(input) {
                    if (input.files && input.files[0]) {
                        var filerdr = new FileReader();
                        filerdr.onload = function (e) {
                            $('#user_img').attr('src', e.target.result);
                        }
                        filerdr.readAsDataURL(input.files[0]);
                    }
            </script>
